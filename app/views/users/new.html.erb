<div class="container  mt-5">
    <h2 class="mb-5"> Créer un compte :  </h2>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
        <%= label_tag 'first_name', 'Prénom' %>
        <%= text_field_tag 'first_name', nil, class:"form-control", placeholder: 'Chris'  %>
    </div>
    <div class="form-group">
        <%= label_tag 'last_name', 'Nom' %>
        <%= text_field_tag 'last_name', nil, class:"form-control", placeholder: 'Blassiaux'  %>
    </div>
    <div class="form-group">
        <%= label_tag 'description', 'Description' %>
        <%= text_area_tag 'description', nil, class:"form-control", rows: 3, placeholder: 'Ancien étudiant en communication visuelle, actuellement en formation de développement web...' %>
    </div>
     <div class="form-group">
        <%= label_tag 'email', 'Email' %>
        <%= text_field_tag 'email', nil, class:"form-control", placeholder: 'chrisblassiaux@gmail.com'  %>
    </div>
     <div class="form-group">
        <%= label_tag 'age', 'Age' %>
        <%= text_field_tag 'age', nil, class:"form-control", placeholder: '21'  %>
    </div>
     <div class="form-group">
        <%= label_tag 'city', 'Ville' %>
        <%= text_field_tag 'city', nil, class:"form-control", placeholder: 'Lille'  %>
    </div>
     <div class="form-group">
        <%= label_tag 'password', 'Mot de passe' %>
        <%= password_field_tag 'password', nil, class:"form-control" %>
    </div>
        <%= submit_tag "M'inscrire", class:"btn btn-dark" %>
        <%# <%= hidden_field_tag 'authenticity_token', 'form_authenticity_token' %> 
    <% end %>
</div>